---
// src/layouts/Layout.astro
import QuoteModal from '../components/QuoteModal.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-white text-slate-900 font-sans antialiased">
		
    <div class="bg-slate-900 text-slate-400 text-xs py-2 border-b border-white/10 hidden md:block">
			<div class="max-w-7xl mx-auto px-4 flex justify-between items-center">
				<div class="font-medium text-slate-300">
					Una marca de <span class="font-bold text-white tracking-wide">DISSTANDS</span>
				</div>

				<div class="flex items-center gap-6">
					<a href="mailto:ventas@disstands.com" class="flex items-center gap-2 hover:text-white transition">
						<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3 text-green-500">
						  <path d="M3 4a2 2 0 0 0-2 2v1.161l8.441 4.221a1.25 1.25 0 0 0 1.118 0L19 7.162V6a2 2 0 0 0-2-2H3Z" />
						  <path d="M19 8.839l-7.77 3.885a2.75 2.75 0 0 1-2.46 0L1 8.839V14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V8.839Z" />
						</svg>
						Suministros: <span class="text-slate-200">ventas@disstands.com</span>
					</a>
					<a href="mailto:moquetas@disstands.com" class="flex items-center gap-2 hover:text-white transition">
						<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3 text-green-500">
						  <path fill-rule="evenodd" d="M10.362 1.093a.75.75 0 0 0-.724 0L2.523 4.218c-.379.169-.379.704 0 .873l7.115 3.125c.213.094.457.094.67 0l7.115-3.125c.379-.169.379-.704 0-.873l-7.115-3.125ZM9.638 6.907c.213.094.457.094.67 0l7.115-3.125a.75.75 0 0 1 0 1.5L10.362 8.407a.75.75 0 0 1-.724 0L2.523 5.282a.75.75 0 0 1 0-1.5l7.115 3.125Z" clip-rule="evenodd" />
						  <path fill-rule="evenodd" d="M10.362 10.392a.75.75 0 0 0-.724 0l-7.115-3.125a.75.75 0 0 0 0 1.5l7.115 3.125c.213.094.457.094.67 0l7.115-3.125a.75.75 0 0 0 0-1.5l-7.115 3.125ZM10.362 14.892a.75.75 0 0 0-.724 0l-7.115-3.125a.75.75 0 0 0 0 1.5l7.115 3.125c.213.094.457.094.67 0l7.115-3.125a.75.75 0 0 0 0-1.5l-7.115 3.125Z" clip-rule="evenodd" />
						</svg>
						Instalaciones: <span class="text-slate-200">moquetas@disstands.com</span>
					</a>
				</div>
			</div>
		</div>

		<nav class="bg-white border-b border-gray-100 sticky top-0 z-50 font-sans">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-[72px] flex items-center justify-between">
				
				<!-- Logo -->
				<a href="/" class="flex items-center hover:opacity-90 transition-opacity shrink-0">
					<img 
						src="/logo.png" 
						alt="CespedBCN - Césped Artificial Barcelona" 
						class="h-10 md:h-12 w-auto object-contain"
					/>
				</a>
		
				<!-- Navegación Desktop -->
				<div class="hidden lg:flex items-center gap-1 text-[15px] font-medium text-slate-700 h-full">
					
					<!-- PRODUCTOS (con dropdown) -->
					<div class="relative h-full flex items-center group px-3">
						<button class="flex items-center gap-1.5 hover:text-green-600 transition-colors focus:outline-none py-2">
							Productos
							<svg class="w-4 h-4 text-gray-400 group-hover:text-green-600 group-hover:rotate-180 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path>
							</svg>
						</button>
						
						<!-- Dropdown Productos -->
						<div class="absolute top-full left-0 w-80 bg-white shadow-xl rounded-xl border border-gray-100 p-2
									invisible opacity-0 translate-y-2 
									group-hover:visible group-hover:opacity-100 group-hover:translate-y-0 
									transition-all duration-200 z-50">
							
							<a href="/productos/cesped-artificial-greendis-7mm" class="flex items-center gap-3 p-3 hover:bg-green-50 rounded-lg transition group/link">
								<span class="w-10 h-10 bg-green-100 text-green-700 rounded-lg flex items-center justify-center shrink-0 text-sm font-bold">7mm</span>
								<div>
									<span class="font-semibold text-slate-800 block group-hover/link:text-green-700 transition-colors">Greendis 7mm</span>
									<span class="text-xs text-slate-500">Desde 4,87€/m²</span>
								</div>
							</a>
		
							<a href="/productos/cesped-artificial-summer-8mm" class="flex items-center gap-3 p-3 hover:bg-green-50 rounded-lg transition group/link">
								<span class="w-10 h-10 bg-green-100 text-green-700 rounded-lg flex items-center justify-center shrink-0 text-sm font-bold">8mm</span>
								<div>
									<span class="font-semibold text-slate-800 block group-hover/link:text-green-700 transition-colors">Summer 8mm</span>
									<span class="text-xs text-slate-500">7,70€/m²</span>
								</div>
							</a>
		
							<a href="/productos/cesped-artificial-capridis-8mm" class="flex items-center gap-3 p-3 hover:bg-green-50 rounded-lg transition group/link">
								<span class="w-10 h-10 bg-green-100 text-green-700 rounded-lg flex items-center justify-center shrink-0 text-sm font-bold">8mm</span>
								<div>
									<span class="font-semibold text-slate-800 block group-hover/link:text-green-700 transition-colors">Capridis 8mm</span>
									<span class="text-xs text-slate-500">Desde 8,26€/m²</span>
								</div>
							</a>
		
							<a href="/productos/cesped-artificial-summer-18mm" class="flex items-center gap-3 p-3 hover:bg-green-50 rounded-lg transition group/link">
								<span class="w-10 h-10 bg-green-100 text-green-700 rounded-lg flex items-center justify-center shrink-0 text-sm font-bold">18mm</span>
								<div>
									<span class="font-semibold text-slate-800 block group-hover/link:text-green-700 transition-colors">Summer 18mm</span>
									<span class="text-xs text-slate-500">5,95€/m²</span>
								</div>
							</a>
		
							<a href="/productos/cesped-artificial-bredis-30mm" class="flex items-center gap-3 p-3 hover:bg-green-50 rounded-lg transition group/link">
								<span class="w-10 h-10 bg-green-100 text-green-700 rounded-lg flex items-center justify-center shrink-0 text-sm font-bold">30mm</span>
								<div>
									<span class="font-semibold text-slate-800 block group-hover/link:text-green-700 transition-colors">Bredis 30mm</span>
									<span class="text-xs text-slate-500">Desde 10,25€/m²</span>
								</div>
							</a>
		
							<!-- Separador y ver todos -->
							<div class="border-t border-gray-100 mt-2 pt-2">
								<a href="/productos" class="flex items-center justify-between p-3 hover:bg-slate-50 rounded-lg transition group/link">
									<span class="font-semibold text-slate-700 group-hover/link:text-green-700 transition-colors">Ver catálogo completo</span>
									<svg class="w-4 h-4 text-slate-400 group-hover/link:text-green-600 group-hover/link:translate-x-1 transition-all" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
									</svg>
								</a>
							</div>
						</div>
					</div>
		
					<!-- Links simples (sin dropdown) -->
					<a href="/servicios" class="px-3 py-2 hover:text-green-600 transition-colors">
						Servicios
					</a>
		
					<a href="/galeria" class="px-3 py-2 hover:text-green-600 transition-colors">
						Galería
					</a>
		
					<a href="/contacto" class="px-3 py-2 hover:text-green-600 transition-colors">
						Contacto
					</a>
				</div>
		
				<!-- CTA + Mobile -->
				<div class="flex items-center gap-4">
					<a href="/contacto" class="hidden lg:flex items-center gap-2 bg-green-600 text-white px-5 py-2.5 rounded-lg font-semibold hover:bg-green-700 transition-colors">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
							<path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
						</svg>
						Presupuesto
					</a>
		
					<!-- Botón móvil -->
					<button class="lg:hidden text-slate-700 p-2 hover:bg-gray-100 rounded-lg transition">
						<span class="sr-only">Abrir menú</span>
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
							<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
						</svg>
					</button>
				</div>
		
			</div>
		</nav>
		<slot />

		<footer class="bg-slate-900 text-slate-300 py-16 mt-20 text-sm font-sans border-t border-green-900">
			<div class="max-w-7xl mx-auto px-4 grid md:grid-cols-2 lg:grid-cols-4 gap-12">
				
				<div class="space-y-6">
					<a href="/" class="block">
						<img src="/logo.png" alt="CespedBCN Logo" class="h-12 w-auto bg-white/10 rounded-lg p-2 backdrop-blur-sm" />
					</a>
					<p class="text-slate-400 leading-relaxed">
						Especialistas en transformar terrazas, áticos y jardines en Barcelona. Instalación profesional, rápida y sin obras.
					</p>
					<div class="pt-4 border-t border-white/10">
						<p class="text-xs text-slate-500 mb-1">Una marca comercial de:</p>
						<p class="font-bold text-white">DISSTANDS MOQUETAS S.L.U.</p>
					</div>
				</div>

				<div>
					<h4 class="font-bold text-white text-lg mb-6">Navegación</h4>
					<ul class="space-y-3">
						<li><a href="/" class="hover:text-green-400 transition flex items-center gap-2">Inicio</a></li>
						<li><a href="#terraza" class="hover:text-green-400 transition flex items-center gap-2">Césped para Terrazas</a></li>
						<li><a href="#jardin" class="hover:text-green-400 transition flex items-center gap-2">Césped para Jardines</a></li>
						<li><a href="#deportivo" class="hover:text-green-400 transition flex items-center gap-2">Césped Deportivo</a></li>
						<li><a href="#galeria" class="hover:text-green-400 transition flex items-center gap-2">Galería de Proyectos</a></li>
						<li><a href="#contacto" class="hover:text-green-400 transition flex items-center gap-2">Pedir Presupuesto</a></li>
					</ul>
				</div>

				<div>
					<h4 class="font-bold text-white text-lg mb-6">Contacto</h4>
					<ul class="space-y-4">
						<li class="flex items-start gap-3">
							<svg class="w-5 h-5 text-green-500 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
							<span>
								Carrer de Joan d'Àustria, 90<br>
								08018 Sant Martí, Barcelona
							</span>
						</li>
						<li class="flex items-center gap-3">
							<svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
							<a href="tel:934850085" class="hover:text-white transition font-bold">934 850 085</a>
						</li>
						<li class="flex items-start gap-3 pt-2">
							<svg class="w-5 h-5 text-green-500 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
							<div class="flex flex-col">
								<a href="mailto:ventas@disstands.com" class="hover:text-green-400 transition">ventas@disstands.com</a>
								<a href="mailto:moquetas@disstands.com" class="hover:text-green-400 transition">moquetas@disstands.com</a>
							</div>
						</li>
					</ul>
				</div>

				<div class="rounded-xl overflow-hidden shadow-lg border border-white/10 h-64 lg:h-auto relative group">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2992.834456789!2d2.189444!3d41.397222!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12a4a31a74e64909%3A0x66f6a70425026615!2sCarrer%20de%20Joan%20d&#39;%C3%80ustria%2C%2090%2C%20Sant%20Mart%C3%AD%2C%2008018%20Barcelona!5e0!3m2!1ses!2ses!4v1705910000000!5m2!1ses!2ses" 
                        class="w-full h-full group-hover:grayscale-0 transition duration-500" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
				</div>

			</div>

			<div class="border-t border-white/10 mt-16 pt-8">
				<div class="max-w-7xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center text-xs text-slate-500">
					<p>&copy; 2026 CespedBCN. Todos los derechos reservados.</p>
					<div class="flex gap-6 mt-4 md:mt-0">
						<a href="/legal" class="hover:text-white transition">Aviso Legal</a>
						<a href="/privacidad" class="hover:text-white transition">Política de Privacidad</a>
						<a href="/cookies" class="hover:text-white transition">Cookies</a>
					</div>
				</div>
			</div>
		</footer>
    <QuoteModal />
	</body>
</html>