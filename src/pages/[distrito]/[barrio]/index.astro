---
// src/pages/[distrito]/[barrio]/index.astro

import Layout from '../../../layouts/Layout.astro';
import { barcelonaLocations } from '../../../data/locations';
import { productData, type ProductCategory } from '../../../data/products';

export async function getStaticPaths() {
  return barcelonaLocations.flatMap((distritoData) => {
    return distritoData.barrios.map((barrioData) => {
      return {
        params: { 
          distrito: distritoData.slug,  
          barrio: barrioData.slug 
        },
        props: { 
          distrito: distritoData,
          barrio: barrioData 
        },
      };
    });
  });
}

const { distrito, barrio } = Astro.props;

// Obtener datos ricos del producto según el tipo del barrio
const product = productData[barrio.type];

// Barrios cercanos (mismo distrito, diferente barrio)
const barriosCercanos = distrito.barrios
  .filter(b => b.slug !== barrio.slug)
  .slice(0, 4);

// Generar contenido contextual único
const getContextualIntro = (type: ProductCategory, barrioName: string, distritoName: string): string => {
  const intros: Record<ProductCategory, string> = {
    'deportivo': `${barrioName} cuenta con numerosas instalaciones deportivas que demandan césped artificial de alto rendimiento. Nuestra experiencia en ${distritoName} nos permite ofrecer soluciones homologadas para pádel, fútbol y multideporte.`,
    'piscinas': `Las zonas residenciales de ${barrioName} destacan por sus piscinas comunitarias y privadas. Instalamos césped antideslizante y resistente al cloro, perfecto para el clima mediterráneo de ${distritoName}.`,
    'eventos': `${barrioName} es uno de los barrios con mayor actividad de eventos en ${distritoName}. Desde bodas hasta ferias comerciales, nuestro césped premium transforma cualquier espacio en un entorno natural elegante.`,
    'comercial': `La alta densidad comercial de ${barrioName} hace del césped artificial una inversión inteligente para negocios. Hoteles, restaurantes y oficinas en ${distritoName} confían en nosotros para sus espacios verdes.`,
    'residencial-terraza': `Los edificios de ${barrioName} ofrecen terrazas con vistas privilegiadas de ${distritoName}. Transformamos estos espacios urbanos en oasis verdes sin el mantenimiento del césped natural.`,
    'residencial-jardin': `${barrioName} es una de las zonas más exclusivas de ${distritoName}, con chalets y jardines privados. Nuestro césped premium ofrece el máximo realismo y durabilidad para estos espacios.`,
    'institucional': `Colegios, centros de salud e instituciones públicas de ${barrioName} confían en nosotros. Cumplimos todas las normativas de seguridad exigidas en ${distritoName}.`,
    'terraza': `Las terrazas urbanas de ${barrioName} son perfectas para césped artificial. Sin tierra, sin riego, verde todo el año en pleno ${distritoName}.`,
    'jardin': `Los jardines de ${barrioName} merecen lo mejor. Césped artificial premium que ahorra agua, tiempo y dinero mientras mantiene tu espacio perfecto en ${distritoName}.`,
    'funcional': `Espacios polivalentes en ${barrioName} requieren soluciones versátiles. Nuestro césped funcional se adapta a cualquier uso en ${distritoName}.`
  };
  return intros[type];
};

const contextualIntro = getContextualIntro(barrio.type, barrio.name, distrito.name);

// FAQs específicas del barrio (mezcla de producto + localización)
const localFAQs = [
  {
    q: `¿Cuánto cuesta instalar césped artificial en ${barrio.name}?`,
    a: `En ${barrio.name} los precios oscilan entre ${product.pricing.basePrice}€/m² y ${product.pricing.premiumPrice}€/m² según calidad. La instalación profesional añade ${product.pricing.installationCost}€/m². Ofrecemos presupuesto gratuito con visita técnica sin coste.`
  },
  {
    q: `¿Cuánto tarda la instalación en ${barrio.name}?`,
    a: `${product.installationTime}. En ${barrio.name} tenemos disponibilidad inmediata y nuestro equipo conoce bien la zona de ${distrito.name}.`
  },
  {
    q: `¿Qué garantía ofrecen en ${barrio.name}?`,
    a: `Ofrecemos ${product.technicalSpecs.garantiaFabrica} de garantía de fábrica y ${product.technicalSpecs.garantiaInstalacion} de garantía de instalación. Servicio post-venta disponible en toda la zona de ${distrito.name}.`
  },
  ...product.specificFAQs.slice(0, 2)
];

const pageTitle = `${product.title} en ${barrio.name}, ${distrito.name} | CespedBCN`;
const pageDescription = `${product.subtitle} en ${barrio.name}. Desde ${product.pricing.basePrice}€/m². Garantía ${product.technicalSpecs.garantiaFabrica}. Instalación en ${distrito.name}. ☎ 934 850 085`;
---

<Layout title={pageTitle}>

  <!-- Hero Section -->
  <header class="relative min-h-[85vh] flex items-center justify-center overflow-hidden">
    
    <div class="absolute inset-0 z-0 overflow-hidden">
      <img 
        src={distrito.image || '/contrasting-outdoor-texture-design.jpg'} 
        alt={`Césped artificial en ${distrito.name}`} 
        class="w-full h-full object-cover blur-sm scale-105 transform"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"></div>
    </div>
    
    <div class="relative z-10 max-w-4xl mx-auto px-4 py-24 text-center">
      
      <nav class="flex items-center justify-center gap-3 text-sm font-medium text-white/80 mb-8 tracking-wide uppercase drop-shadow-md">
        <a href="/" class="hover:text-white transition-colors">Inicio</a>
        <span>/</span>
        <a href={`/${distrito.slug}`} class="hover:text-white transition-colors">{distrito.name}</a>
        <span>/</span>
        <span class="text-green-400">{barrio.name}</span>
      </nav>

      <div class="inline-flex items-center gap-2 bg-black/40 backdrop-blur-md rounded-full px-4 py-1.5 mb-8 border border-white/10 shadow-lg">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
        </span>
        <span class="text-white text-xs font-medium tracking-wide">Servicio activo en {barrio.name}</span>
      </div>

      <h1 class="text-5xl md:text-7xl font-black text-white mb-6 leading-[1.1] tracking-tight drop-shadow-2xl">
        Césped Artificial
        <span class="block text-green-400 mt-2">
           {product.title.includes('Césped') ? product.title.replace('Césped Artificial ', '') : product.title} 
           <span class="text-white">en {barrio.name}</span>
        </span>
      </h1>

      <p class="text-xl md:text-2xl text-white/95 max-w-2xl mx-auto mb-10 font-medium drop-shadow-lg">
        {product.subtitle || "Instalaciones temporales y permanentes premium"}
      </p>

      <div class="inline-flex flex-col sm:flex-row items-center justify-center bg-black/50 backdrop-blur-md rounded-[2rem] border border-white/10 px-8 py-4 mb-10 divide-y sm:divide-y-0 sm:divide-x divide-white/10 w-full max-w-2xl mx-auto shadow-2xl">
        
        <div class="flex flex-col items-center px-6 py-2 sm:py-0 w-full sm:w-auto">
           <span class="text-white/70 text-[10px] uppercase tracking-wider mb-1 font-bold">Precio desde</span>
           <div class="flex items-baseline">
             <span class="text-3xl font-bold text-white drop-shadow-sm">{product.pricing.basePrice}€</span>
             <span class="text-white/80 text-sm ml-1">/m²</span>
           </div>
        </div>
        
        <div class="flex flex-col items-center px-6 py-2 sm:py-0 w-full sm:w-auto">
           <span class="text-white/70 text-[10px] uppercase tracking-wider mb-1 font-bold">Garantía</span>
           <div class="flex items-center text-white font-semibold text-lg drop-shadow-sm">
              <svg class="w-4 h-4 mr-2 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
              {product.technicalSpecs.garantiaFabrica}
           </div>
        </div>

        <div class="flex flex-col items-center px-6 py-2 sm:py-0 w-full sm:w-auto">
           <span class="text-white/70 text-[10px] uppercase tracking-wider mb-1 font-bold">Instalación</span>
           <div class="flex items-center text-white font-semibold text-lg drop-shadow-sm">
              <svg class="w-4 h-4 mr-2 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
              {product.installationTime.split(' ')[0]}h
           </div>
        </div>

      </div>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a 
          href="tel:934850085" 
          class="inline-flex items-center gap-2 bg-green-500 hover:bg-green-400 text-white px-8 py-3.5 rounded-full font-bold transition-all shadow-lg shadow-green-900/20 hover:shadow-green-500/40 hover:-translate-y-0.5"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
             <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
          </svg>
          Llamar ahora
          <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" /></svg>
        </a>
        <a 
          href="/contacto" 
          class="text-white font-medium hover:text-green-300 transition-colors px-6 py-3 drop-shadow-md"
        >
          Presupuesto Online
        </a>
      </div>
    </div>
</header>
  <main>

    <!-- Intro Section -->
    <section class="py-24 bg-white relative overflow-hidden">
      <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-green-50 to-transparent"></div>
      
      <div class="max-w-6xl mx-auto px-4 relative">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          
          <!-- Text Content -->
          <div>
            <span class="inline-flex items-center gap-2 text-green-600 font-semibold text-sm uppercase tracking-wider mb-4">
              <span class="w-8 h-px bg-green-600"></span>
              Especialistas en {distrito.name}
            </span>
            
            <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6 leading-tight">
              ¿Por qué elegir césped artificial en {barrio.name}?
            </h2>
            
            <p class="text-lg text-slate-600 leading-relaxed mb-6">
              {contextualIntro}
            </p>

            <p class="text-slate-500 leading-relaxed mb-8">
              {product.description}
            </p>

            <a 
              href={`/servicios/${barrio.type}`}
              class="inline-flex items-center gap-2 text-green-600 font-bold hover:gap-3 transition-all group"
            >
              <span>Más información sobre este servicio</span>
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
              </svg>
            </a>
          </div>

          <!-- Price Card -->
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-br from-green-600 to-emerald-700 rounded-3xl transform rotate-3 scale-105 opacity-10"></div>
            <div class="relative bg-slate-900 rounded-3xl p-8 md:p-10 text-white shadow-2xl">
              <div class="flex items-center gap-3 mb-8">
                <div class="w-12 h-12 bg-green-500/20 rounded-2xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z" />
                  </svg>
                </div>
                <h3 class="text-xl font-bold">Precios en {barrio.name}</h3>
              </div>
              
              <div class="space-y-5">
                <div class="flex items-end justify-between pb-5 border-b border-white/10">
                  <div>
                    <span class="text-slate-400 text-sm">Material</span>
                    <p class="text-slate-300 text-xs mt-1">Según calidad</p>
                  </div>
                  <div class="text-right">
                    <span class="text-3xl font-bold">{product.pricing.basePrice}-{product.pricing.premiumPrice}€</span>
                    <span class="text-slate-400 text-sm">/m²</span>
                  </div>
                </div>
                
                <div class="flex items-center justify-between pb-5 border-b border-white/10">
                  <span class="text-slate-400">Instalación profesional</span>
                  <span class="text-xl font-semibold">{product.pricing.installationCost}€<span class="text-slate-400 text-sm">/m²</span></span>
                </div>
                
                <div class="flex items-center justify-between pb-5 border-b border-white/10">
                  <span class="text-slate-400">Garantía fábrica</span>
                  <span class="text-green-400 font-semibold">{product.technicalSpecs.garantiaFabrica}</span>
                </div>
                
                <div class="flex items-center justify-between">
                  <span class="text-slate-400">Ahorro anual estimado</span>
                  <span class="text-green-400 font-bold text-xl">{product.pricing.savingsVsNatural}€</span>
                </div>
              </div>

              <a 
                href="/contacto"
                class="block w-full bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-500 hover:to-emerald-500 text-center py-4 rounded-2xl font-bold mt-8 transition-all shadow-lg shadow-green-600/25"
              >
                Solicitar presupuesto personalizado
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="py-24 bg-slate-50">
      <div class="max-w-6xl mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-flex items-center gap-2 text-green-600 font-semibold text-sm uppercase tracking-wider mb-4">
            <span class="w-8 h-px bg-green-600"></span>
            Ventajas
            <span class="w-8 h-px bg-green-600"></span>
          </span>
          <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">
            Beneficios principales
          </h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto">
            Por qué nuestros clientes de {distrito.name} eligen césped artificial
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {product.benefits.slice(0, 6).map((benefit, i) => (
            <div class="group bg-white rounded-3xl p-8 shadow-sm hover:shadow-xl transition-all duration-300 border border-slate-100 hover:border-green-200 hover:-translate-y-1">
              <div class="w-14 h-14 bg-gradient-to-br from-green-100 to-emerald-100 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                <svg class="w-7 h-7 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
              </div>
              <p class="text-slate-700 font-medium text-lg leading-relaxed">{benefit}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Use Cases & Ideal For -->
    <section class="py-24 bg-white">
      <div class="max-w-6xl mx-auto px-4">
        <div class="grid lg:grid-cols-2 gap-16">
          
          <!-- Use Cases -->
          <div>
            <span class="inline-flex items-center gap-2 text-green-600 font-semibold text-sm uppercase tracking-wider mb-4">
              <span class="w-8 h-px bg-green-600"></span>
              Aplicaciones
            </span>
            <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-8">
              ¿Para qué se usa en {barrio.name}?
            </h2>

            <div class="space-y-4">
              {product.useCases.slice(0, 6).map((useCase) => (
                <div class="flex items-center gap-4 p-4 bg-slate-50 rounded-2xl hover:bg-green-50 transition-colors group">
                  <div class="w-10 h-10 bg-green-600 rounded-xl flex items-center justify-center shrink-0 group-hover:scale-110 transition-transform">
                    <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                    </svg>
                  </div>
                  <span class="text-slate-700 font-medium">{useCase}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Ideal For / Not Recommended -->
          <div class="space-y-10">
            <div>
              <h3 class="flex items-center gap-3 text-xl font-bold text-slate-900 mb-6">
                <span class="w-10 h-10 bg-green-100 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </span>
                Ideal para
              </h3>
              <div class="space-y-3">
                {product.idealFor.map((item) => (
                  <div class="flex items-start gap-3 pl-4 border-l-2 border-green-200">
                    <span class="text-slate-600">{item}</span>
                  </div>
                ))}
              </div>
            </div>

            <div>
              <h3 class="flex items-center gap-3 text-xl font-bold text-slate-900 mb-6">
                <span class="w-10 h-10 bg-amber-100 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-amber-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
                  </svg>
                </span>
                No recomendado para
              </h3>
              <div class="space-y-3">
                {product.notRecommendedFor.map((item) => (
                  <div class="flex items-start gap-3 pl-4 border-l-2 border-amber-200">
                    <span class="text-slate-600">{item}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="py-24 bg-slate-900 relative overflow-hidden">
      <!-- Background decoration -->
      <div class="absolute inset-0 opacity-30">
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-green-500 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-emerald-500 rounded-full blur-3xl"></div>
      </div>
      
      <div class="max-w-6xl mx-auto px-4 relative">
        <div class="text-center mb-16">
          <span class="inline-flex items-center gap-2 text-green-400 font-semibold text-sm uppercase tracking-wider mb-4">
            <span class="w-8 h-px bg-green-400"></span>
            Proceso
            <span class="w-8 h-px bg-green-400"></span>
          </span>
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
            ¿Cómo trabajamos en {barrio.name}?
          </h2>
          <p class="text-lg text-slate-400 max-w-2xl mx-auto">
            De principio a fin, te acompañamos en todo el proceso
          </p>
        </div>

        <div class="grid md:grid-cols-4 gap-8">
          {[
            { num: '01', title: 'Contacto', desc: 'Llámanos o escríbenos. Respuesta en menos de 2 horas.' },
            { num: '02', title: 'Visita Técnica', desc: `Vamos a ${barrio.name} a medir. Sin coste ni compromiso.` },
            { num: '03', title: 'Presupuesto', desc: 'Recibes presupuesto detallado en 24h. Precio cerrado.' },
            { num: '04', title: 'Instalación', desc: `${product.installationTime}. Limpieza incluida.` }
          ].map((step) => (
            <div class="text-center group">
              <div class="relative mb-6">
                <span class="text-7xl font-black text-white/5 group-hover:text-green-500/20 transition-colors">{step.num}</span>
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-600 rounded-2xl flex items-center justify-center shadow-lg shadow-green-500/30 group-hover:scale-110 transition-transform">
                    <span class="text-xl font-bold text-white">{step.num}</span>
                  </div>
                </div>
              </div>
              <h3 class="text-xl font-bold text-white mb-3">{step.title}</h3>
              <p class="text-slate-400">{step.desc}</p>
            </div>
          ))}
        </div>

        <div class="text-center mt-16">
          <a 
            href="/contacto" 
            class="inline-flex items-center gap-3 bg-white text-slate-900 px-8 py-4 rounded-2xl font-bold hover:bg-green-50 transition-all shadow-lg hover:-translate-y-0.5"
          >
            Empezar ahora
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Technical Specs -->
    <section class="py-24 bg-white">
      <div class="max-w-6xl mx-auto px-4">
        <div class="text-center mb-16">
