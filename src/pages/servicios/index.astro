const pageTitle = 'Servicios de Césped Artificial en Barcelona | CespedBCN';
const pageDescription = 'Servicios especializados de césped artificial: jardines, terrazas, piscinas, comercial, deportivo, eventos e institucional. Presupuesto gratis en Barcelona.';
---

<Layout title={pageTitle}>

  <!-- Hero -->
  <header class="relative bg-slate-900 text-white py-20 overflow-hidden">
    <!-- Imagen de fondo -->
    <div class="absolute inset-0">
      <img 
        src="/contrasting-outdoor-texture-design.jpg" 
        alt="" 
        class="w-full h-full object-cover opacity-30"
      />
    </div>
    
    <!-- Contenido -->
    <div class="relative max-w-6xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-black mb-4">
        Nuestros <span class="text-green-400">Servicios</span>
      </h1>
      <p class="text-xl text-slate-300 max-w-2xl mx-auto">
        Soluciones especializadas de césped artificial para cada necesidad. 
        Desde jardines residenciales hasta instalaciones deportivas profesionales.
      </p>
    </div>
</header>

  <main class="max-w-6xl mx-auto px-4 py-12">

    <!-- Grid de servicios -->
    <div class="grid md:grid-cols-2 gap-6">
      {servicios.map(({ tipo, iconPath }) => {
        const product = productData[tipo];
        return (
          <a 
            href={`/servicios/${tipo}`}
            class="group bg-white border border-gray-200 rounded-2xl p-6 hover:shadow-xl hover:border-green-300 transition-all duration-300"
          >
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center shrink-0 group-hover:bg-green-200 transition-colors">
                <svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d={iconPath} />
                </svg>
              </div>
              <div class="flex-1">
                <h2 class="text-xl font-bold text-slate-900 group-hover:text-green-600 transition mb-2">
                  {product.title}
                </h2>
                <p class="text-slate-600 text-sm mb-4 line-clamp-2">
                  {product.subtitle}
                </p>
                
                <div class="flex items-center gap-4 text-sm">
                  <span class="text-slate-500">
                    Desde <strong class="text-green-600">{product.pricing.basePrice}€/m²</strong>
                  </span>
                  <span class="text-slate-400">|</span>
                  <span class="text-slate-500">
                    Garantía {product.technicalSpecs.garantiaFabrica}
                  </span>
                </div>
              </div>
              <svg class="w-6 h-6 text-slate-300 group-hover:text-green-600 group-hover:translate-x-1 transition-all shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
              </svg>
            </div>

            <!-- Usos principales -->
            <div class="mt-4 pt-4 border-t border-gray-100">
              <div class="flex flex-wrap gap-2">
                {product.useCases.slice(0, 3).map((useCase) => (
                  <span class="bg-gray-100 text-slate-600 text-xs px-2 py-1 rounded">
                    {useCase}
                  </span>
                ))}
              </div>
            </div>
          </a>
        );
      })}
    </div>

    <!-- Comparativa rápida -->
    <section class="mt-16">
      <h2 class="text-2xl font-bold text-slate-900 mb-6 text-center">Comparativa de servicios</h2>
      <div class="overflow-x-auto">
        <table class="w-full bg-white border border-gray-200 rounded-xl overflow-hidden">
          <thead class="bg-slate-50">
            <tr>
              <th class="text-left p-4 font-bold text-slate-900">Servicio</th>
              <th class="text-center p-4 font-bold text-slate-900">Precio/m²</th>
              <th class="text-center p-4 font-bold text-slate-900">Garantía</th>
              <th class="text-center p-4 font-bold text-slate-900">Instalación</th>
              <th class="text-center p-4 font-bold text-slate-900">Ahorro/año</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            {servicios.map(({ tipo, iconPath }) => {
              const product = productData[tipo];
              return (
                <tr class="hover:bg-gray-50 transition">
                  <td class="p-4">
                    <a href={`/servicios/${tipo}`} class="flex items-center gap-3 font-medium text-slate-900 hover:text-green-600 transition">
                      <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center shrink-0">
                        <svg class="w-4 h-4 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" d={iconPath} />
                        </svg>
                      </div>
                      <span class="truncate max-w-[200px]">{product.title.replace('Césped Artificial ', '')}</span>
                    </a>
                  </td>
                  <td class="p-4 text-center">
                    <span class="font-bold text-green-600">{product.pricing.basePrice}-{product.pricing.premiumPrice}€</span>
                  </td>
                  <td class="p-4 text-center text-slate-600">
                    {product.technicalSpecs.garantiaFabrica}
                  </td>
                  <td class="p-4 text-center text-slate-600 text-sm">
                    {product.installationTime}
                  </td>
                  <td class="p-4 text-center">
                    <span class="font-bold text-green-600">{product.pricing.savingsVsNatural}€</span>
                  </td>
                </tr>
              );
            })}
          </tbody>
        </table>
      </div>
    </section>

    <!-- CTA -->
    <section class="mt-16 bg-slate-900 rounded-2xl p-8 md:p-12 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
        ¿No sabes qué servicio necesitas?
      </h2>
      <p class="text-slate-300 mb-8 max-w-xl mx-auto">
        Te asesoramos gratis. Cuéntanos tu proyecto y te recomendamos la mejor solución.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="tel:934850085" class="inline-flex items-center gap-2 bg-green-600 text-white px-6 py-3 rounded-xl font-bold hover:bg-green-500 transition">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
          </svg>
          934 850 085
        </a>
        <a href="mailto:ventas@disstands.com" class="inline-flex items-center gap-2 bg-white text-slate-900 px-6 py-3 rounded-xl font-bold hover:bg-gray-100 transition">
          ventas@disstands.com
        </a>
      </div>
    </section>

  </main>

</Layout>