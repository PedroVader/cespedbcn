  <section class="py-12 bg-slate-50 border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4">
      
      <div class="flex flex-col md:flex-row items-center justify-between gap-8">
        
        <!-- Texto -->
        <div class="text-center md:text-left md:max-w-xs shrink-0">
          <span class="text-slate-400 font-bold uppercase tracking-widest text-[10px]">Calidad Certificada</span>
          <h3 class="text-lg font-black text-slate-900 mt-1">Certificaciones oficiales</h3>
