---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import { barcelonaLocations } from '../data/locations';
---

<Layout title="CespedBCN | Venta de Césped Artificial y Servicio a Profesionales">
  <!-- Hero optimizado para mostrar hero + carrusel en viewport inicial -->
<!-- Hero optimizado para caber en viewport con doble navbar (~180px) -->
<!-- Hero optimizado para mobile y desktop -->
<header class="relative overflow-hidden min-h-[calc(100svh-200px)] md:min-h-[calc(100vh-260px)] flex items-center">
    
    <div class="absolute inset-0 z-0">
      <img 
        src="/contrasting-outdoor-texture-design.jpg" 
        alt="Césped Artificial Barcelona" 
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/80"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 py-6 md:py-8 relative z-10 w-full">
        
        <div class="flex flex-col lg:grid lg:grid-cols-2 gap-6 lg:gap-10 items-center">
            
            <!-- Contenido principal -->
            <div class="text-center lg:text-left order-1">
                <span class="inline-flex items-center gap-1.5 py-1 px-3 rounded-full bg-yellow-500/20 text-yellow-300 text-[10px] font-bold mb-3 uppercase tracking-widest border border-yellow-500/30 backdrop-blur-sm animate-pulse">
                  <span class="w-1.5 h-1.5 bg-yellow-400 rounded-full"></span>
                  Asesoramiento Gratuito
                </span>

                <h1 class="text-[1.75rem] leading-tight sm:text-3xl md:text-4xl lg:text-5xl font-black text-white mb-3">
                  Venta Premium de<br>
                  <span class="text-green-400">Césped Artificial.</span>
                </h1>
                
                <p class="text-sm md:text-base text-slate-300 mb-4 font-light leading-relaxed max-w-md mx-auto lg:mx-0">
                  Suministro directo a particulares y empresas.
                  <strong class="text-white font-semibold"> Instalación exclusiva para profesionales.</strong>
                </p>
                
                <!-- Botones - stack en mobile pequeño, row en el resto -->
                <div class="flex flex-row gap-2 justify-center lg:justify-start">
                  <a href="tel:934850085" class="bg-green-600 text-white font-bold py-2.5 px-4 sm:px-5 rounded-lg hover:bg-green-500 transition shadow-lg shadow-green-600/30 active:scale-95 flex items-center justify-center gap-2 text-sm flex-1 sm:flex-none">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" /></svg>
                    <span class="hidden xs:inline">Llamar</span> Ahora
                  </a>
                  <a href="#barrios" class="bg-white/10 text-white border border-white/30 backdrop-blur-md font-bold py-2.5 px-4 sm:px-5 rounded-lg hover:bg-white/20 active:scale-95 transition flex items-center justify-center text-sm flex-1 sm:flex-none">
                    Ver Zonas
                  </a>
                </div>
            </div>

            <!-- Formulario -->
            <div class="relative w-full order-2 lg:order-2">
                <div class="bg-white/10 backdrop-blur-md border border-white/20 p-4 rounded-2xl shadow-2xl max-w-sm mx-auto lg:max-w-md">
                    <h3 class="text-base sm:text-lg font-bold text-white mb-0.5">Presupuesto Rápido</h3>
                    <p class="text-slate-300 text-xs mb-3">Déjanos tus datos y te asesoramos.</p>
                    
                    <form 
                        class="space-y-2" 
                        name="presupuesto-home" 
                        method="POST" 
                        data-netlify="true"
                    >
                        <input type="hidden" name="form-name" value="presupuesto-home" />

                        <!-- En mobile: campos en una fila cuando caben -->
                        <div class="flex flex-col sm:flex-row gap-2">
                          <input 
                              type="text" 
                              name="nombre" 
                              placeholder="Nombre" 
                              required
                              class="w-full bg-black/20 border border-white/10 rounded-lg px-3 py-2.5 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:bg-black/40 transition text-sm" 
                          />
                          <input 
                              type="tel" 
                              name="telefono" 
                              placeholder="Teléfono" 
                              required
                              class="w-full bg-black/20 border border-white/10 rounded-lg px-3 py-2.5 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:bg-black/40 transition text-sm" 
                          />
                        </div>
                        
                        <select 
                            name="tipo_cliente" 
                            class="w-full bg-black/20 border border-white/10 rounded-lg px-3 py-2.5 text-white focus:outline-none focus:ring-2 focus:ring-green-500 focus:bg-black/40 transition appearance-none text-sm"
                            style="background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 24 24%27 fill=%27none%27 stroke=%27white%27 stroke-width=%272%27%3e%3cpath stroke-linecap=%27round%27 stroke-linejoin=%27round%27 d=%27m19.5 8.25-7.5 7.5-7.5-7.5%27/%3e%3c/svg%3e'); background-repeat: no-repeat; background-position: right 0.75rem center; background-size: 1rem;"
                        >
                            <option class="text-black" value="particular">Soy Particular</option>
                            <option class="text-black" value="profesional">Soy Profesional</option>
                        </select>
                        
                        <button type="submit" class="w-full bg-green-500 hover:bg-green-400 active:bg-green-600 text-slate-900 font-bold py-2.5 rounded-lg transition shadow-lg shadow-green-500/20 text-sm">
                            Solicitar Información ➔
                        </button>

                        <p class="text-[9px] text-center text-gray-400">
                            Tus datos son 100% confidenciales.
                        </p>
                    </form>
                </div>
            </div>

        </div>
    </div>
  </header>

  <!-- Carrusel de logos - compacto en mobile -->
  <section class="py-3 sm:py-4 bg-white border-b border-gray-100 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4">
      
      <!-- Header inline -->
      <div class="flex items-center gap-3 mb-2 sm:mb-3">
        <span class="text-slate-400 font-bold uppercase tracking-widest text-[9px] sm:text-[10px] whitespace-nowrap">Confían en nosotros</span>
        <div class="h-px flex-1 bg-slate-100"></div>
      </div>

      <!-- Carrusel infinito -->
      <div class="relative">
        <!-- Gradientes fade en los bordes -->
        <div class="absolute left-0 top-0 bottom-0 w-8 sm:w-12 bg-gradient-to-r from-white to-transparent z-10 pointer-events-none"></div>
        <div class="absolute right-0 top-0 bottom-0 w-8 sm:w-12 bg-gradient-to-l from-white to-transparent z-10 pointer-events-none"></div>

        <div class="logo-carousel flex items-center gap-8 sm:gap-12">
          
          <!-- Primera copia de logos -->
          <div class="logo-track flex items-center gap-8 sm:gap-12 shrink-0">
            
            <div class="flex items-center justify-center h-6 sm:h-8 w-16 sm:w-24 grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition duration-300">
              <img src="/logos-companies/Logo_NIKE.svg" alt="Nike" class="max-h-full max-w-full object-contain"/>
            </div>

            <div class="flex items-center justify-center h-6 sm:h-8 w-16 sm:w-24 grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition duration-300">
              <img src="/logos-companies/Letterhead_of_the_King_of_Spain_s_Household.svg-removebg-preview.png" alt="Casa Real de España" class="max-h-full max-w-full object-contain"/>
            </div>

            <div class="flex items-center justify-center h-6 sm:h-8 w-16 sm:w-24 grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition duration-300">
              <img src="/logos-companies/Alimentaria-logo-sinfechas-transparente.png" alt="Alimentaria" class="max-h-full max-w-full object-contain"/>
            </div>

            <div class="flex items-center justify-center h-6 sm:h-8 w-16 sm:w-24 grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition duration-300">
              <img src="/logos-companies/ice-totally-gaming-logo.png" alt="ICE Totally Gaming" class="max-h-full max-w-full object-contain"/>
            </div>

            <div class="flex items-center justify-center h-6 sm:h-8 w-16 sm:w-24 grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition duration-300">
              <img src="/logos-companies/imgbin-desigual-logo-clothing-brand-fashion-license-commercial-3RXEkFmgRSi28vWapBnXDkZ5e-removebg-preview.png" alt="Desigual" class="max-h-full max-w-full object-contain"/>
            </div>

          </div>

          <!-- Segunda copia -->
          <div class="logo-track flex items-center gap-8 sm:gap-12 shrink-0">
            
            <div class="flex items-center justify-center h-6 sm:h-8 w-16 sm:w-24 grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition duration-300">
              <img src="/logos-companies/Logo_NIKE.svg" alt="Nike" class="max-h-full max-w-full object-contain"/>
            </div>

            <div class="flex items-center justify-center h-6 sm:h-8 w-16 sm:w-24 grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition duration-300">
              <img src="/logos-companies/Letterhead_of_the_King_of_Spain_s_Household.svg-removebg-preview.png" alt="Casa Real de España" class="max-h-full max-w-full object-contain"/>
            </div>

            <div class="flex items-center justify-center h-6 sm:h-8 w-16 sm:w-24 grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition duration-300">
              <img src="/logos-companies/Alimentaria-logo-sinfechas-transparente.png" alt="Alimentaria" class="max-h-full max-w-full object-contain"/>
            </div>

            <div class="flex items-center justify-center h-6 sm:h-8 w-16 sm:w-24 grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition duration-300">
              <img src="/logos-companies/ice-totally-gaming-logo.png" alt="ICE Totally Gaming" class="max-h-full max-w-full object-contain"/>
            </div>

            <div class="flex items-center justify-center h-6 sm:h-8 w-16 sm:w-24 grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition duration-300">
              <img src="/logos-companies/imgbin-desigual-logo-clothing-brand-fashion-license-commercial-3RXEkFmgRSi28vWapBnXDkZ5e-removebg-preview.png" alt="Desigual" class="max-h-full max-w-full object-contain"/>
            </div>

          </div>

        </div>
      </div>

    </div>
  </section>
  
  <style>
    /* Usar svh (small viewport height) para mobile que tiene barra de navegador */
    @supports (min-height: 100svh) {
      header {
        min-height: calc(100svh - 200px);
      }
      @media (min-width: 768px) {
        header {
          min-height: calc(100svh - 260px);
        }
      }
    }

    .logo-carousel {
      animation: scroll 18s linear infinite;
    }
  
    .logo-carousel:hover {
      animation-play-state: paused;
    }
  
    @keyframes scroll {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }

    /* En mobile muy pequeño, hacer scroll más rápido */
    @media (max-width: 640px) {
      .logo-carousel {
        animation-duration: 12s;
      }
    }
  </style>
  <section class="py-24 bg-white relative border-b border-gray-100">
    <div class="max-w-7xl mx-auto px-4">
        
        <div class="grid lg:grid-cols-2 gap-16 items-center">
            
            <div>
                <span class="text-slate-500 font-bold uppercase tracking-widest text-xs">Líderes en Distribución</span>
                <h2 class="text-3xl md:text-5xl font-black text-slate-900 mt-2 mb-6 leading-tight">
                    Tu especialista en <span class="text-green-700">Césped Artificial</span> en Barcelona.
