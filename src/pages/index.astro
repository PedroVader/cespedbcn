        </div>
  
        <!-- Logos de certificaciones -->
        <div class="flex flex-wrap items-center justify-center md:justify-end gap-6 md:gap-8">
          
          <div class="flex items-center justify-center h-16 w-auto grayscale hover:grayscale-0 opacity-70 hover:opacity-100 transition duration-300">
            <img 
              src="/logos-certifications/Certificacion-ISO-9001-172x86.jpg" 
              alt="Certificación ISO 9001" 
              class="h-full w-auto object-contain"
