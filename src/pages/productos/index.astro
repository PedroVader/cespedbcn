---
// src/pages/productos/index.astro
import Layout from '../../layouts/Layout.astro';
import { catalogProducts, catalogStats, type CatalogProduct } from '../../data/catalog';

// Agrupar productos por categoría
const productsByCategory = {
  decorativo: catalogProducts.filter(p => p.category === 'decorativo' && p.isActive),
  residencial: catalogProducts.filter(p => p.category === 'residencial' && p.isActive),
  premium: catalogProducts.filter(p => p.category === 'premium' && p.isActive),
  deportivo: catalogProducts.filter(p => p.category === 'deportivo' && p.isActive),
};

const categoryLabels: Record<string, { title: string; description: string }> = {
  decorativo: {
    title: 'Césped Decorativo',
    description: 'Soluciones económicas para eventos, stands, balcones y espacios decorativos'
  },
  residencial: {
    title: 'Césped Residencial',
    description: 'Calidad premium para jardines, terrazas y zonas de piscina'
  },
  premium: {
    title: 'Césped Premium',
    description: 'Máxima calidad y realismo para proyectos exigentes'
  },
  deportivo: {
    title: 'Césped Deportivo',
    description: 'Alto rendimiento para instalaciones deportivas'
  }
};

const activeProducts = catalogProducts.filter(p => p.isActive).sort((a, b) => a.sortOrder - b.sortOrder);

const pageTitle = 'Catálogo de Césped Artificial | Desde 4,87€/m² | CespedBCN';
const pageDescription = `Descubre nuestra gama de césped artificial: ${catalogStats.activeProducts} productos desde ${catalogStats.priceRange.min}€/m². Envío Barcelona 24-48h. Corte a medida disponible.`;
---

<Layout title={pageTitle}>

  <!-- Breadcrumbs -->
  <nav class="bg-gray-50 border-b border-gray-200">
    <div class="max-w-6xl mx-auto px-4 py-3">
      <ol class="flex items-center gap-2 text-sm text-gray-600">
        <li><a href="/" class="hover:text-green-600 transition">Inicio</a></li>
        <li><span class="text-gray-400">/</span></li>
        <li class="text-gray-900 font-medium">Productos</li>
      </ol>
    </div>
  </nav>

  <!-- Hero -->
  <header class="bg-slate-900 text-white py-16 md:py-20">
    <div class="max-w-6xl mx-auto px-4">
      <div class="max-w-3xl">
        <span class="inline-block bg-green-600 text-white text-xs font-bold px-3 py-1 rounded-full mb-4 uppercase tracking-wider">
          Catálogo 2025
        </span>
        <h1 class="text-4xl md:text-5xl font-black mb-4">
          Césped Artificial Barcelona
        </h1>
        <p class="text-xl text-slate-300 mb-8">
          {catalogStats.activeProducts} productos de calidad profesional. Desde {catalogStats.priceRange.min}€/m² hasta {catalogStats.priceRange.max}€/m². 
          Alturas de {catalogStats.heightRange.min}mm a {catalogStats.heightRange.max}mm.
        </p>
        
        <div class="flex flex-wrap gap-4">
          <div class="bg-white/10 backdrop-blur rounded-xl px-4 py-3 border border-white/20">
            <span class="block text-2xl font-bold text-green-400">{catalogStats.priceRange.min}€</span>
            <span class="text-sm text-slate-400">Precio mínimo/m²</span>
          </div>
          <div class="bg-white/10 backdrop-blur rounded-xl px-4 py-3 border border-white/20">
            <span class="block text-2xl font-bold text-white">{catalogStats.activeProducts}</span>
            <span class="text-sm text-slate-400">Productos</span>
          </div>
          <div class="bg-white/10 backdrop-blur rounded-xl px-4 py-3 border border-white/20">
            <span class="block text-2xl font-bold text-white">24-48h</span>
            <span class="text-sm text-slate-400">Envío Barcelona</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <main class="max-w-6xl mx-auto px-4 py-12">

    <!-- Filtros rápidos -->
    <section class="mb-12">
      <div class="flex flex-wrap gap-3">
        <span class="text-sm text-slate-500 font-medium py-2">Filtrar por:</span>
        <button class="px-4 py-2 bg-slate-900 text-white rounded-lg text-sm font-bold">
          Todos ({catalogStats.activeProducts})
        </button>
        {Object.entries(productsByCategory).map(([category, products]) => 
          products.length > 0 && (
            <button class="px-4 py-2 bg-gray-100 text-slate-700 rounded-lg text-sm font-medium hover:bg-gray-200 transition">
              {categoryLabels[category]?.title || category} ({products.length})
            </button>
          )
        )}
      </div>
    </section>

    <!-- Grid de productos -->
    <section class="mb-16">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {activeProducts.map((product) => (
          <article class="bg-white border border-gray-200 rounded-2xl overflow-hidden hover:shadow-xl hover:border-green-200 transition-all duration-300 group">
            
            <!-- Imagen -->
            <div class="relative h-48 bg-gradient-to-br from-green-100 to-green-50 overflow-hidden">
              <div class="absolute inset-0 flex items-center justify-center">
                <span class="text-6xl font-black text-green-200">{product.height}mm</span>
              </div>
              
              <!-- Badges -->
              <div class="absolute top-3 left-3 flex flex-wrap gap-2">
                {product.isFeatured && (
                  <span class="bg-amber-500 text-white text-[10px] font-bold px-2 py-1 rounded-full uppercase">
                    Popular
                  </span>
                )}
                {product.isNew && (
                  <span class="bg-blue-500 text-white text-[10px] font-bold px-2 py-1 rounded-full uppercase">
                    Nuevo
                  </span>
                )}
                {product.variants.length > 1 && (
                  <span class="bg-purple-500 text-white text-[10px] font-bold px-2 py-1 rounded-full uppercase">
                    {product.variants.length} colores
                  </span>
                )}
              </div>

              <!-- Categoría -->
              <div class="absolute top-3 right-3">
                <span class="bg-white/90 backdrop-blur text-slate-700 text-[10px] font-bold px-2 py-1 rounded-full uppercase">
                  {product.category}
                </span>
              </div>
            </div>

            <!-- Contenido -->
            <div class="p-5">
              <div class="flex items-start justify-between gap-4 mb-3">
                <div>
                  <h2 class="text-lg font-bold text-slate-900 group-hover:text-green-600 transition">
                    {product.shortName}
                  </h2>
                  <p class="text-sm text-slate-500">{product.height}mm de altura</p>
                </div>
                <div class="text-right shrink-0">
                  <span class="text-xl font-black text-green-600">{product.priceMin}€</span>
                  <span class="text-slate-400 text-sm">/m²</span>
                  {product.priceMin !== product.priceMax && (
                    <p class="text-xs text-slate-400">hasta {product.priceMax}€</p>
                  )}
                </div>
              </div>

              <p class="text-sm text-slate-600 mb-4 line-clamp-2">
                {product.headline}
              </p>

              <!-- Tags -->
              <div class="flex flex-wrap gap-1.5 mb-4">
                {product.tags.slice(0, 4).map((tag) => (
                  <span class="bg-gray-100 text-slate-600 text-[10px] font-medium px-2 py-1 rounded">
                    {tag}
                  </span>
                ))}
              </div>

              <!-- Specs rápidos -->
              <div class="flex items-center gap-4 text-xs text-slate-500 mb-4 border-t border-gray-100 pt-4">
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                  </svg>
                  UV
                </span>
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                  </svg>
                  Drenaje
                </span>
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                  </svg>
                  {product.warranty} años
                </span>
              </div>

              <!-- CTA -->
              <a 
                href={`/productos/${product.slug}`}
                class="block w-full bg-slate-900 text-white text-center py-3 rounded-xl font-bold hover:bg-green-600 transition"
              >
                Ver producto
              </a>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- Comparativa rápida -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-slate-900 mb-6">Comparativa rápida</h2>
      <div class="overflow-x-auto">
        <table class="w-full bg-white border border-gray-200 rounded-xl overflow-hidden">
          <thead class="bg-slate-50">
            <tr>
              <th class="text-left px-4 py-3 text-sm font-bold text-slate-700">Producto</th>
              <th class="text-center px-4 py-3 text-sm font-bold text-slate-700">Altura</th>
              <th class="text-center px-4 py-3 text-sm font-bold text-slate-700">Precio/m²</th>
              <th class="text-center px-4 py-3 text-sm font-bold text-slate-700">Garantía</th>
              <th class="text-center px-4 py-3 text-sm font-bold text-slate-700">Colores</th>
              <th class="text-center px-4 py-3 text-sm font-bold text-slate-700">Uso ideal</th>
              <th class="text-center px-4 py-3 text-sm font-bold text-slate-700"></th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            {activeProducts.map((product) => (
              <tr class="hover:bg-green-50/50 transition">
                <td class="px-4 py-4">
                  <div class="flex items-center gap-3">
                    <span class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center text-xs font-black text-green-700">
                      {product.height}mm
                    </span>
                    <div>
                      <p class="font-bold text-slate-900">{product.shortName}</p>
                      <p class="text-xs text-slate-500">{product.category}</p>
                    </div>
                  </div>
                </td>
                <td class="text-center px-4 py-4 font-medium">{product.height}mm</td>
                <td class="text-center px-4 py-4">
                  <span class="font-bold text-green-600">{product.priceMin}€</span>
                  {product.priceMin !== product.priceMax && (
                    <span class="text-slate-400 text-sm"> - {product.priceMax}€</span>
                  )}
                </td>
                <td class="text-center px-4 py-4">{product.warranty} años</td>
                <td class="text-center px-4 py-4">
                  <div class="flex items-center justify-center gap-1">
                    {product.variants.slice(0, 3).map((variant) => (
                      <span 
                        class="w-4 h-4 rounded-full border border-gray-300" 
                        style={`background-color: ${variant.colorHex || '#4a7c59'}`}
                        title={variant.color}
                      />
                    ))}
                    {product.variants.length > 3 && (
                      <span class="text-xs text-slate-500">+{product.variants.length - 3}</span>
                    )}
                  </div>
                </td>
                <td class="text-center px-4 py-4 text-sm text-slate-600">
                  {product.tags[0]}
                </td>
                <td class="px-4 py-4">
                  <a 
                    href={`/productos/${product.slug}`}
                    class="text-green-600 hover:text-green-700 font-bold text-sm"
                  >
                    Ver →
                  </a>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </section>

    <!-- Información adicional -->
    <section class="grid md:grid-cols-3 gap-6 mb-16">
      <div class="bg-green-50 border border-green-200 rounded-xl p-6">
        <div class="w-12 h-12 bg-green-600 rounded-xl flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 0 1-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 0 0-3.213-9.193 2.056 2.056 0 0 0-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 0 0-10.026 0 1.106 1.106 0 0 0-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-slate-900 mb-2">Envío rápido</h3>
        <p class="text-slate-600 text-sm">
          Entrega en Barcelona y área metropolitana en 24-48 horas. Rollos completos y cortes a medida.
        </p>
      </div>

      <div class="bg-blue-50 border border-blue-200 rounded-xl p-6">
        <div class="w-12 h-12 bg-blue-600 rounded-xl flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7.848 8.25l1.536.887M7.848 8.25a3 3 0 1 1-5.196-3 3 3 0 0 1 5.196 3Zm1.536.887a2.165 2.165 0 0 1 1.083 1.839c.005.351.054.695.14 1.024M9.384 9.137l2.077 1.199M7.848 15.75l1.536-.887m-1.536.887a3 3 0 1 1-5.196 3 3 3 0 0 1 5.196-3Zm1.536-.887a2.165 2.165 0 0 0 1.083-1.838c.005-.352.054-.695.14-1.025m-1.223 2.863 2.077-1.199m0-3.328a4.323 4.323 0 0 1 2.068-1.379l5.325-1.628a4.5 4.5 0 0 1 2.48-.044l.803.215-7.794 4.5m-2.882-1.664A4.331 4.331 0 0 0 10.607 12m3.736 0 7.794 4.5-.802.215a4.5 4.5 0 0 1-2.48-.043l-5.326-1.629a4.324 4.324 0 0 1-2.068-1.379M14.343 12l-2.882 1.664" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-slate-900 mb-2">Corte a medida</h3>
        <p class="text-slate-600 text-sm">
          Cortamos el césped a los metros lineales que necesites. Sin desperdicio, sin complicaciones.
        </p>
      </div>

      <div class="bg-amber-50 border border-amber-200 rounded-xl p-6">
        <div class="w-12 h-12 bg-amber-600 rounded-xl flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-slate-900 mb-2">Garantía incluida</h3>
        <p class="text-slate-600 text-sm">
          Todos nuestros productos incluyen garantía de fábrica de 4 a 8 años según el modelo.
        </p>
      </div>
    </section>

    <!-- CTA Final -->
    <section class="bg-slate-900 rounded-2xl p-8 md:p-12 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
        ¿No sabes cuál elegir?
      </h2>
      <p class="text-slate-300 mb-8 max-w-xl mx-auto">
        Te asesoramos gratis. Cuéntanos tu proyecto y te recomendamos el césped ideal para tu espacio.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="tel:934850085" class="inline-flex items-center gap-2 bg-green-600 text-white px-6 py-3 rounded-xl font-bold hover:bg-green-500 transition">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
          </svg>
          934 850 085
        </a>
        <a href="mailto:ventas@disstands.com" class="inline-flex items-center gap-2 bg-white text-slate-900 px-6 py-3 rounded-xl font-bold hover:bg-gray-100 transition">
          ventas@disstands.com
        </a>
      </div>
    </section>

  </main>

  <!-- Schema markup -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "Catálogo de Césped Artificial CespedBCN",
    "description": pageDescription,
    "numberOfItems": catalogStats.activeProducts,
    "itemListElement": activeProducts.map((product, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "Product",
        "name": product.name,
        "description": product.description,
        "url": `https://cespedbcn.com/productos/${product.slug}`,
        "offers": {
          "@type": "AggregateOffer",
          "lowPrice": product.priceMin,
          "highPrice": product.priceMax,
          "priceCurrency": "EUR",
          "unitText": "m²"
        }
      }
    }))
  })} />

</Layout>